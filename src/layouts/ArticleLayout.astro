---
import BaseLayout from "./BaseLayout.astro";
import AudioPlayer from "@vocasync/astro/components/AudioPlayer.astro";
import audioMap from "../data/audio-map.json";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author?: string;
  slug: string;
}

const { title, description, pubDate, author, slug } = Astro.props;

const formattedDate = pubDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Get audio entry for this post
const audioEntry = audioMap.entries[slug as keyof typeof audioMap.entries];
---

<BaseLayout title={title} description={description}>
  <article>
    <header class="article-header">
      <h1>{title}</h1>
      <div class="article-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {author && <span class="author">by {author}</span>}
      </div>
      <p class="article-description">{description}</p>
    </header>

    <div class="audio-player-wrapper">
      <AudioPlayer 
        slug={slug} 
        audioEntry={audioEntry}
        label={`Listen to "${title}"`}
        enableMiniPlayer={true}
        enableHighlighting={true}
        trailLength={4}
      />
    </div>

    <div class="article-content" data-article-body>
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  article {
    max-width: 100%;
  }

  .article-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  h1 {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0.75rem;
  }

  .article-meta {
    display: flex;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 0.75rem;
  }

  .author::before {
    content: "â€¢";
    margin-right: 0.5rem;
  }

  .article-description {
    color: var(--color-text-muted);
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .audio-player-wrapper {
    margin-bottom: 2rem;
  }

  .article-content {
    font-size: 1.0625rem;
    line-height: 1.8;
  }

  .article-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .article-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .article-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .article-content :global(strong) {
    font-weight: 600;
  }

  .article-content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .article-content :global(a:hover) {
    color: var(--color-primary-hover);
  }

  .article-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background-color: var(--color-border);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
  }

  .article-content :global(pre) {
    background-color: var(--color-border);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }

  .article-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .article-content :global(blockquote) {
    border-left: 3px solid var(--color-primary);
    padding-left: 1rem;
    margin-left: 0;
    margin-bottom: 1.25rem;
    color: var(--color-text-muted);
    font-style: italic;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 1.75rem;
    }

    .article-content {
      font-size: 1rem;
    }
  }
</style>
